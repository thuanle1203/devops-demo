{
  "AWSEBDockerrunVersion": "3",
  "containerDefinitions": [
    {
      "name": "client",
      "image": "edlee2k/multi-client-10-14",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "server",
      "image": "edlee2k/multi-server-10-14",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "worker",
      "image": "edlee2k/multi-worker-10-14",
      "hostname": "worker",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "edlee2k/multi-nginx-10-14",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["client", "server"]
    }
  ]
}
